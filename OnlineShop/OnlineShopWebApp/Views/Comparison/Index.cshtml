@model Comparison

@if (Model == null)
{
    <div class="container mt-5 text-center">
        <h1>Список сравнения пуст</h1>
        <a class="btn btn-primary btn-sm mt-2 ml-3" href="/home/index/" role="button">Вернуться к покупкам</a>
    </div>
}
else{
<div class="container">
        <h1>Сравнение товаров</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Название книги</th>
                    <th scope="col">Автор</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var product in Model.Items){
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Author</td>
                    <td>
                            <a style="color:white" class=" btn btn-sm btn-success" href="#">Удалить</a>
                            <a style="color:white" class="btn btn-sm btn-danger" href="#">В корзину</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

        <div class="text-right">
            <a style="color:white" class="btn btn-primary" href="#">Назад</a>
            <a style="color:white" class="btn btn-warning" href="#">Очистить</a>
        </div>
    </div>
}