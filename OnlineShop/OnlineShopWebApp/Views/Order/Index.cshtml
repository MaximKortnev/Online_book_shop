@model Cart

<div class="container mt-5">
    <h1>Оформление заказа</h1>

    <!-- Личные данные пользователя -->
    <div class="form-group">
        <label for="fullName">ФИО</label>
        <input type="text" class="form-control" id="fullName" placeholder="Введите ФИО">
    </div>

    <div class="form-group">
        <label for="Adres">Адрес</label>
        <input type="text" class="form-control" id="adres" placeholder="Введите Адрес">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="phone">Телефон</label>
            <input type="text" class="form-control" id="phone" placeholder="Введите номер телефона">
        </div>

        <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Введите email">
        </div>
    </div>

    <!-- Способ доставки -->
    <div class="form-group">
        <label for="deliveryMethod">Способ доставки</label>
        <select class="form-control" id="deliveryMethod">
            <option>Самовывоз</option>
            <option>Курьерская доставка</option>
            <!-- Добавьте другие способы доставки по необходимости -->
        </select>
    </div>

    <!-- Способ оплаты -->
    <div class="form-group">
        <label for="paymentMethod">Способ оплаты</label>
        <select class="form-control" id="paymentMethod">
            <option>Оплата наличными</option>
            <option>Оплата картой</option>
            <!-- Добавьте другие способы оплаты по необходимости -->
        </select>
    </div>

    <!-- Поле для ввода промокода -->
    <div class="form-group">
        <label for="promoCode">Промокод</label>
        <input type="text" class="form-control" id="promoCode" placeholder="Введите промокод">
    </div>

    <!-- Состав заказа -->
    <h3>Состав заказа</h3>
    <ul>
        @foreach(var item in Model.Items)
        {
            <li>@item.Product.Name - @item.Product.Cost руб. @item.Amount шт.</li>
        }
    </ul>
    <div class="form-group">
        <label for="totalCost">Итоговая стоимость</label>
        <input type="text" class="form-control" id="totalCost" value="@Model.Cost руб." readonly>
    </div>
    <a style="color:white" class="btn btn-primary" onclick="submitOrder()">Оформить заказ</a>
</div>


<div class="modal fade" id="orderSuccessModal" tabindex="-1" role="dialog" aria-labelledby="orderSuccessModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderSuccessModalLabel">Заказ успешно оформлен</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Ваш заказ был успешно оформлен. Спасибо за покупку!
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-secondary" data-dismiss="modal" href="/home/index">Закрыть</a>
            </div>
        </div>
    </div>
</div>