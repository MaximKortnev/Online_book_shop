@model List<Product>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img class="card-img-top" src="~/@product.ImagePath" alt="Image">
                    <div class="card-body">
                        <a style="color:black" href="/product/index?productId=@product.Id">
                            <h5 class="text-center">@product.Name</h5>
                        </a>
                        <h6 class="text-center">@product.Author</h6>
                        <h5 class="text-center">₽ @product.Cost</h5>
                        <div class="d-flex justify-content-between align-items-center mt-3 ml-3">
                            <div class="btn-group">
                                <a href="/Comparison/add?productId=@product.Id" class="btn btn-outline-warning">
                                    <i class="bi bi-arrow-bar-up"></i>
                                </a>
                                <a href="/favorite/add?productId=@product.Id" class="btn btn-outline-warning">
                                    <i class="bi bi-heart-fill"></i>
                                </a>
                                <a class="btn btn-primary" href="/cart/add?productId=@product.Id">В корзину</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>