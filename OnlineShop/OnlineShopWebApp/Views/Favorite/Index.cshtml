@model Favorite

@if (Model == null)
{
     <div class="container mt-5 text-center">
        <h1>Список избранного пуст</h1>
        <a class="btn btn-primary btn-sm mt-2 ml-3" href="/home/index/" role="button">Вернуться к покупкам</a>
    </div>
}
else{
<div class="container">
        <h1>Избранное</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Название позиции</th>
                    <th scope="col">Стоимость позиции</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Items){
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Cost</td>
                    <td>
                        <a style="color:white" class=" btn btn-sm btn-success" href="/favorite/Decrease?productId=@item.Id">Удалить</a>
                        <a style="color:white" class="btn btn-sm btn-danger" href="/cart/add?productId=@item.Id">В корзину</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

        <div class="text-right">
            <a style="color:white" class="btn btn-primary" href="/home/index">На главную</a>
            <a style="color:white" class="btn btn-warning" href="/favorite/clear">Очистить избранное</a>
        </div>
    </div>
}