@model User
@if (Model == null)
{
    <h1>Bad</h1>
}
else
{
    <form method="post">
        <div class="container-fluid">
            <div class="row">
                @await Html.PartialAsync("~/Areas/Admin/Views/Admin/AdminPanelNavigation.cshtml")
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <h2 class="text-center mr-5">Список пользователей</h2>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Логин  <strong>@Model.Login</strong></h5>
                            <p class="card-text">Пароль <strong>@Model.Password</strong></p>
                            <p class="card-text">Эл. почта: <strong>@Model.Email</strong></p>
                            <p class="card-text">Имя: <strong>@Model.NickName</strong></p>
                            <p class="card-text" style="display: inline;">Роль:</p>
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <button style="color:white" type="submit" class="btn btn-sm btn-primary" asp-area="Admin" asp-action="Save" asp-controller="AdminOrders">Сохранить</button>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </form>
}