@model User

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("~/Areas/Admin/Views/Admin/AdminPanelNavigation.cshtml")
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h2>Редактирование пароля</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Password">Новый пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Подтвердите новый пароль</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="AdminUsers" asp-action="EditPassword">Сохранить изменения</button>
            </form>
        </main>
    </div>
</div>