@model List<User>

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("AdminPanelNavigation")
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h2 class="text-center mr-5">Список пользователей</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Логин</th>
                        <th scope="col">Пароль</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Имя</th>
                        <th scope="col">Роль</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Login</td>
                            <td>@Model[i].Password</td>
                            <td>@Model[i].Email</td>
                            <td>@Model[i].NickName</td>
                            <td>@Model[i].Role.Name</td>
                            <td>
                                <a style="color:white" class="btn btn-sm btn-info" asp-area="Admin" asp-route-Id="@Model[i].Id" asp-action="Info" asp-controller="Users">Инфо</a>
                            </td>
                            <td>
                                <a style="color:white" class="btn btn-sm btn-info" asp-area="Admin" asp-route-orderId="@Model[i].Id" asp-action="Delete" asp-controller="Users">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </main>
    </div>
</div>