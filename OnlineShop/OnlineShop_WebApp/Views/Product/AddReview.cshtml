@model AddReviewModel


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Добавление нового пользователя</h5>
        <form method="post" role="form">
            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ProductId" value="@Model.ProductId"/>
            <div class="form-group">
                <label asp-for="Text">Текст отзыва:</label><br />
                <input type="text" class="form-control" asp-for="Text" />
                <span asp-validation-for="Text" />
            </div>

            <div class="form-group">
                <label asp-for="Grade">Оценка:</label><br />
                <input type="number" class="form-control" asp-for="Grade" />
                <span asp-validation-for="Grade" />
            </div>


            <button type="submit" class="btn btn-primary" asp-area="" asp-action="AddReview" asp-controller="Product">Сохранить</button>
        </form>
    </div>
</div>