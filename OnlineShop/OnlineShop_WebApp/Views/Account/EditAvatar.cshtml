@model UserEditAvatarViewModel

<form method="post" enctype="multipart/form-data">
    <div>
        <div class="form-group">
            <label> Пользователь: @Model.Login </label>
            <input type="hidden" name="Login" value="@Model.Login" />
        </div>

        <div class="form-group">
            <label>Текущая аватарка</label>
            <img src="@Model.AvatarImagePath"/>
        </div>

        <div class="form-group">
            <label>Обновить аватарку</label>
            <input type="file" name="UploadNewAvatar" class="form-control" />
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="SaveEditAvatar">Сохранить изменения</button>
        </div>
    </div>
</form>