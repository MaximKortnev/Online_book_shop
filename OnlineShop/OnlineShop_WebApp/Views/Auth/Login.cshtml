@model LoginUser

<div class="container d-flex justify-content-center align-items-center" style="height: 60vh;">
    <div class="card text-center">
        <div class="card-body">
            <h2 class="card-title">Вход</h2>
            <form method="post">
                <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                <div class="form-group">
                    <label asp-for="Login" class="form-label">Введите логин</label>
                    <input type="text" class="form-control" asp-for="Login" />
                    <span asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Введите пароль</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" name="rememberMe" value="true" />
                    <label class="form-check-label">Запомнить меня</label>
                </div>
                <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Auth" asp-action="Login">Войти</button>
            </form>
            <div class="mt-3">
                <p>Нет аккаунта? <a asp-area="" asp-controller="Auth" asp-action="Registration" asp-route-ReturnUrl="@Model.ReturnUrl">Зарегистрируйтесь</a>.</p>
            </div>
        </div>
    </div>
</div>