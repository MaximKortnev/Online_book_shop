@model List<ProductViewModel>


@if (Model != null)
{
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div class="card">
                        <img class="card-img-top" src="@product.ImagePath" alt="Image">
                        <div class="card-body">
                            <a style="color:black" asp-area="" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id">
                                <h5 class="text-center">@product.Name</h5>
                            </a>
                            <h6 class="text-center">@product.Author</h6>
                            <h5 class="text-center">₽ @product.Cost</h5>
                            <div class="d-flex justify-content-between align-items-center mt-3 ml-3">
                                <div class="btn-group">
                                    <a asp-area="" asp-controller="Comparison" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-arrow-bar-up"></i>
                                    </a>
                                    <a asp-area="" asp-controller="Favorite" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-heart-fill"></i>
                                    </a>
                                    <a class="btn btn-primary" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id">В корзину</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}