@model List<ProductViewModel>

@if (Model == null || Model.Count == 0)
{
    <div class="container mt-5 text-center">
        <h1>Список сравнения пуст</h1>
        <a class="btn btn-primary btn-sm mt-2 ml-3" asp-area="" asp-controller="Home" asp-action="Index" role="button">Вернуться к покупкам</a>
    </div>
}
else
{
    <div class="container">
        <h1>Сравнение товаров</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Название книги</th>
                    <th scope="col">Автор</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Author</td>
                        <td>
                            <a style="color:white" class=" btn btn-sm btn-success" asp-area="" asp-controller="Comparison" asp-action="Delete" asp-route-productId="@product.Id">Удалить</a>
                            <a style="color:white" class="btn btn-sm btn-danger" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id">В корзину</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-right">
            <a style="color:white" class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Назад</a>
            <a style="color:white" class="btn btn-warning" asp-area="" asp-controller="Comparison" asp-action="Clear">Очистить</a>
        </div>
    </div>
}